{
  "manifest_version": 3,
  "name": "Kosovo Government Domain Checker",
  "version": "1.2.0",
  "description": "A lightweight browser extension that verifies whether the website you are visiting belongs to an official government domain of the Republic of Kosovo.",
  "author": "Amir Aliu",
  "homepage_url": "https://github.com/AmirAliuA/kosovo-gov-site-verification",
  "offline_enabled": true,
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "64": "assets/icons/icon64.png",
    "128": "assets/icons/icon128.png",
    "256": "assets/icons/icon256.png",
    "512": "assets/icons/icon512.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "64": "assets/icons/icon64.png",
      "128": "assets/icons/icon128.png",
      "256": "assets/icons/icon256.png",
      "512": "assets/icons/icon512.png"
    }
  },
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content/banner.js"
      ],
      "css": [
        "src/content/banner.css"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/data/domains.json",
        "assets/icons/*",
        "assets/emblem.png",
        "assets/kosovo-flag.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ]
}
